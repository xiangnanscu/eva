// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  utime      DateTime @updatedAt
  ctime      DateTime @default(now())
  sfzh       String   @unique
  name       String
  permission Int      @default(0)
}

model Worker {
  id      Int      @id @default(autoincrement())
  utime   DateTime @updatedAt
  ctime   DateTime @default(now())
  sfzh    String   @unique
  name    String
  reviews Review[]
}

model Community {
  id    Int      @id @default(autoincrement())
  utime DateTime @updatedAt
  ctime DateTime @default(now())
  name  String
  org   String?   @default("")
  reviews Review[]
}

model Review {
  id       Int      @id @default(autoincrement())
  ctime    DateTime @default(now())
  star     Int      @default(0)
  worker   Worker @relation(fields: [workerId], references: [id])
  workerId Int
  commuity   Community @relation(fields: [commuityId], references: [id])
  commuityId Int
  note     String?  @default("")
}
